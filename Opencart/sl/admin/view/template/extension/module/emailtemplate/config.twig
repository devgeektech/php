{{ header }}{{ column_left }}
<div id="content">
  <div id="emailtemplate">
    <div class="page-header">
      <div class="container-fluid clearfix">
        <div class="pull-right">
          <button id="submit_form_button" type="submit" form="form-emailtemplate" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-success"><i class="fa fa-save"></i></button>
          <a href="{{ action_delete }}" data-confirm="{{ text_confirm }}" class="btn btn-danger" data-toggle="tooltip" title="{{ button_delete }}"><i class="fa fa-trash"></i></a>
          {% if action_configs is not empty and action_configs|length > 1 %}
            <div class="btn-group" data-toggle="tooltip" title="{{ button_config }}">
              <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-cog"></i> <i class="fa fa-caret-down"></i>
              </button>
              <ul class="dropdown-menu dropdown-menu-right" role="menu">
                {% if action_default is not empty %}
                  <li><a href="{{ action_default }}" class="dropdown-item">{{ button_default_config }}</a></li>
                  <li class="divider"></li>
                {% endif %} {% for row in action_configs %} {% if row.id != 1 %}
                  <li><a href="{{ row.url|raw }}" class="dropdown-item{{ row.id == emailtemplate_config_id ? ' active' }}">{{ row.name }}</a>
                  </li>
                {% endif %} {% endfor %}
              </ul>
            </div>
          {% endif %}
          <a href="{{ url_insert_config }}" class="btn btn-primary" data-toggle="tooltip" title="{{ text_create_config }}"><i class="fa fa-plus"></i></a>
          <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
        </div>
        <h1>{{ emailtemplate_config.name }}</h1>
        <ul class="breadcrumb">
          {% for breadcrumb in breadcrumbs %}
            <li class="breadcrumb-item{{ loop.index == breadcrumbs|length ? ' active' }}"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <div class="container-fluid">
      {% if error_warning is not empty %}
        <div class="alert alert-danger">
          <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %} {% if error_attention is not empty %}
        <div class="alert alert-warning">
          <i class="fa fa-exclamation-circle"></i> {{ error_attention }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %} {% if success is not empty %}
        <div class="alert alert-success">
          <i class="fa fa-exclamation-circle"></i> {{ success }}
          <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
      {% endif %}
      <div class="panel panel-default mb-3">
        <div class="panel-body">
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-emailtemplate" class="form-horizontal">
            <div class="panel-nav-tabs">
              <ul class="nav nav-tabs" id="config-tabs">
                <li class="nav-item active"><a href="javascript:void(0)" class="nav-link" data-target="#tab-settings" data-toggle="tab"><i class="fa fa-wrench hidden-xs"></i> {{ heading_settings }}</a></li>
                <li class="nav-item"><a href="javascript:void(0)" class="nav-link" data-target="#tab-style" data-toggle="tab"><i class="fa fa-paint-brush hidden-xs"></i> {{ heading_style }}</a></li>
                <li class="nav-item"><a href="javascript:void(0)" class="nav-link" data-target="#tab-header" data-toggle="tab"><i class="fa fa-arrow-up hidden-xs"></i> {{ heading_header }}</a></li>
                <li class="nav-item"><a href="javascript:void(0)" class="nav-link" data-target="#tab-page" data-toggle="tab"><i class="fa fa-align-justify hidden-xs"></i> {{ heading_page }}</a></li>
                <li class="nav-item"><a href="javascript:void(0)" class="nav-link" data-target="#tab-footer" data-toggle="tab"><i class="fa fa-arrow-down hidden-xs"></i> {{ heading_footer }}</a></li>
                <li class="nav-item"><a href="javascript:void(0)" class="nav-link" data-target="#tab-product" data-toggle="tab"><i class="fa fa-tags hidden-xs"></i> {{ heading_product }}</a></li>
                <li class="nav-item"><a href="javascript:void(0)" class="nav-link" data-target="#tab-showcase" data-toggle="tab"><i class="fa fa-rocket hidden-xs"></i> {{ heading_showcase }}</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane form-horizontal fade in active" id="tab-settings">
                  <div class="well well-sm" style="padding-left:0;padding-right:0;">
                    <fieldset>
                      <legend style="padding-left:20px;padding-right:20px;">{{ heading_condition }}</legend>
                      {% if emailtemplate_config_id > 1 %}
                      <div class="form-group">
                        <label class="col-md-2 control-label" for="language_id">{{ entry_language }}</label>
                        <div class="col-md-4">
                          <select class="form-control" name="language_id" id="language_id">
                            <option value="-1">{{ text_select }}</option>
                            {% for language in languages %}
                              <option value="{{ language.language_id }}" {{ language.language_id == emailtemplate_config.language_id ? ' selected="selected" ' }}>
                                {{ language.name }} </option>
                            {% endfor %}
                          </select>
                        </div>
                      </div>
                      {% endif %}
                      <div class="form-group">
                        <label class="col-md-2 control-label" for="store_id">{{ entry_store }}</label>
                        <div class="col-md-4">
                          <select class="form-control" name="store_id" id="store_id">
                            <option value="NULL">{{ text_select }}</option>
                            {% for store in stores %}
                              <option value="{{ store.store_id }}"{{ emailtemplate_config.store_id == store.store_id and emailtemplate_config.store_id != '' ? ' selected="selected"' }}>{{ store.name }}</option>
                            {% endfor %}
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-md-2 control-label" for="customer_group_id">{{ entry_customer_group }}</label>
                        <div class="col-md-4">
                          <select class="form-control" name="customer_group_id" id="customer_group_id">
                            <option value="-1">{{ text_select }}</option>
                            {% for customer_group in customer_groups %}
                              <option value="{{ customer_group.customer_group_id }}" {{ customer_group.customer_group_id == emailtemplate_config.customer_group_id ? ' selected="selected" ' }}>
                                {{ customer_group.name }} </option>
                            {% endfor %}
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-md-2 control-label" for="emailtemplate_config_admin">{{ entry_admin }}</label>
                        <div class="col-md-10">
                          <div class="btn-group btn-group-toggle" data-toggle="buttons">
                            <label class="btn btn-default danger {{ emailtemplate_config.admin == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                              <input type="radio" name="emailtemplate_config_admin" value="0" {{ emailtemplate_config.status == 0 ? ' checked="checked" ' }}/><i class="fa fa-fw fa-times"></i>
                            </label>
                            <label class="btn btn-default success {{ emailtemplate_config.admin == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                              <input type="radio" name="emailtemplate_config_admin" value="1" {{ emailtemplate_config.admin == 1 ? ' checked="checked" ' }}/><i class="fa fa-fw fa-check"></i>
                            </label>
                          </div>
                        </div>
                      </div>
                    </fieldset>
                  </div>
                  <div class="form-group required">
                    <label class="col-md-2 control-label" for="emailtemplate_config_name">{{ entry_label }}</label>
                    <div class="col-md-4">
                      <input class="form-control" id="emailtemplate_config_name" name="emailtemplate_config_name" value="{{ emailtemplate_config.name }}" required="required" type="text"/>
                      {% if error_emailtemplate_config_name is defined %}<span class="text-danger">{{ error_emailtemplate_config_name }}</span>{% endif %}
                    </div>
                  </div>
                  {% if id != 1 %}
                    <div class="form-group">
                      <label class="col-md-2 control-label" for="emailtemplate_config_status">{{ entry_status }}</label>
                      <div class="col-md-4">
                        <div class="btn-group btn-group-toggle" data-toggle="buttons">
                          <label class="btn btn-default danger {{ emailtemplate_config.status == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_disabled }}">
                            <input type="radio" name="emailtemplate_config_status" value="0" {{ emailtemplate_config.status == 0 ? ' checked="checked" ' }}/><i class="fa fa-fw fa-times"></i>
                          </label>
                          <label class="btn btn-default success {{ emailtemplate_config.status == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_enabled }}">
                            <input type="radio" name="emailtemplate_config_status" value="1" {{ emailtemplate_config.status == 1 ? ' checked="checked" ' }}/><i class="fa fa-fw fa-check"></i>
                          </label>
                        </div>
                      </div>
                    </div>
                  {% endif %}
                  <div class="form-group row">
                    <label class="col-md-2 control-label" for="emailtemplate_config_wrapper_tpl">{{ entry_wrapper }}</label>
                    <div class="col-md-4">
                      <input class="form-control" id="emailtemplate_config_wrapper_tpl" name="emailtemplate_config_wrapper_tpl" value="{{ emailtemplate_config.wrapper_tpl }}" type="text"/>
                      {% if error_emailtemplate_config_name is not empty %}<span class="text-danger">{{ error_emailtemplate_config_name }}</span>{% endif %}
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2 control-label" for="emailtemplate_config_log">{{ entry_log }}</label>
                    <div class="col-md-4">
                      <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-default danger {{ emailtemplate_config.log == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                          <input type="radio" name="emailtemplate_config_log" onchange="jQuery('.collapse-log').collapse('hide');" value="0"{{ emailtemplate_config.log == 0 ? ' checked="checked"' }} /><i class="fa  fa-fw fa-times"></i>
                        </label>
                        <label class="btn btn-default success {{ emailtemplate_config.log == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                          <input type="radio" name="emailtemplate_config_log" onchange="jQuery('.collapse-log').collapse('show');" value="1"{{ emailtemplate_config.log == 1 ? ' checked="checked"' }} /><i class="fa  fa-fw fa-check"></i>
                        </label>
                      </div>
                    </div>
                    <label class="col-md-2 control-label collapse collapse-log{{ emailtemplate_config.log == 1 ? ' in' }}" for="emailtemplate_config_log_read">{{ entry_log_read }}</label>
                    <div class="col-md-4 collapse collapse-log{{ emailtemplate_config.log == 1 ? ' in' }}">
                      <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-default danger {{ emailtemplate_config.log_read == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                          <input type="radio" name="emailtemplate_config_log_read" value="0"{{ emailtemplate_config.log_read == 0 ? ' checked="checked"' }} /><i class="fa  fa-fw fa-times"></i>
                        </label>
                        <label class="btn btn-default success {{ emailtemplate_config.log_read == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                          <input type="radio" name="emailtemplate_config_log_read" value="1"{{ emailtemplate_config.log_read == 1 ? ' checked="checked"' }} /><i class="fa  fa-fw fa-check"></i>
                        </label>
                      </div>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2 control-label" for="emailtemplate_config_view_browser">{{ entry_view_browser }}</label>
                    <div class="col-md-4">
                      <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-default danger {{ emailtemplate_config.view_browser == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                          <input type="radio" name="emailtemplate_config_view_browser" onchange="jQuery('.collapse-view-browser').collapse('hide');" value="0"{{ emailtemplate_config.view_browser == 0 ? ' checked="checked"' }} /><i class="fa  fa-fw fa-times"></i>
                        </label>
                        <label class="btn btn-default success {{ emailtemplate_config.view_browser == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                          <input type="radio" name="emailtemplate_config_view_browser" onchange="jQuery('.collapse-view-browser').collapse('show');" value="1"{{ emailtemplate_config.view_browser == 1 ? ' checked="checked"' }} /><i class="fa  fa-fw fa-check"></i>
                        </label>
                      </div>
                    </div>
                    <label class="col-md-2 control-label collapse collapse-view-browser{{ emailtemplate_config.view_browser == 1 ? ' in' }}" for="emailtemplate_config_log_read">{{ entry_view_browser_theme }}</label>
                    <div class="col-md-4 collapse collapse-view-browser{{ emailtemplate_config.view_browser == 1 ? ' in' }}">
                      <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-default danger {{ emailtemplate_config.view_browser_theme == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                          <input type="radio" name="emailtemplate_config_view_browser_theme" value="0"{{ emailtemplate_config.view_browser_theme == 0 ? ' checked="checked"' }} /><i class="fa  fa-fw fa-times"></i>
                        </label>
                        <label class="btn btn-default success {{ emailtemplate_config.view_browser_theme == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                          <input type="radio" name="emailtemplate_config_view_browser_theme" value="1"{{ emailtemplate_config.view_browser_theme == 1 ? ' checked="checked"' }} /><i class="fa  fa-fw fa-check"></i>
                        </label>
                      </div>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2 control-label" for="emailtemplate_config_preference_text">{{ entry_preference_text }} <br /><small>&#123;&#123; preference_text &#125;&#125;</small></label>
                    <div class="col-md-10">
                      <ul class="nav nav-tabs">
                        {% for language in config_languages %}
                          <li class="nav-item{{ loop.first ? ' active' }}"><a href="#" class="nav-link" data-target="#tab-preference-text-{{ language.code }}" data-toggle="tab" title="{{ language.name }}"><img src="language/{{ language.code }}/{{ language.code }}.png"/></a></li>
                        {% endfor %}
                      </ul>
                      <div class="tab-content">
                        {% for language in config_languages %}
                          <div class="tab-pane form-horizontal{{ loop.first ? ' active' }}" id="tab-preference-text-{{ language.code }}">
                            <label for="emailtemplate_config_preference_text_essential_{{ language.language_id }}">{{ text_essential }}</label>
                            <textarea class="form-control summernote" data-toggle="summernote" data-height="100" name="emailtemplate_config_preference_text[essential][{{ language.language_id }}]" id="emailtemplate_config_preference_text_essential_{{ language.language_id }}">{{ emailtemplate_config.preference_text.essential[language.language_id] }}</textarea>
                            <label for="emailtemplate_config_preference_text_notification_{{ language.language_id }}">{{ text_notification }}</label>
                            <textarea class="form-control summernote" data-toggle="summernote" data-height="100" name="emailtemplate_config_preference_text[notification][{{ language.language_id }}]" id="emailtemplate_config_preference_text_notification_{{ language.language_id }}">{{ emailtemplate_config.preference_text.notification[language.language_id] }}</textarea>
                            <label for="emailtemplate_config_preference_text_newsletter_{{ language.language_id }}">{{ text_newsletter }}</label>
                            <textarea class="form-control summernote" data-toggle="summernote" data-height="100" name="emailtemplate_config_preference_text[newsletter][{{ language.language_id }}]" id="emailtemplate_config_preference_text_newsletter_{{ language.language_id }}">{{ emailtemplate_config.preference_text.newsletter[language.language_id] }}</textarea>
                          </div>
                        {% endfor %}
                      </div>
                    </div>
                  </div>
                </div>
                <!-- #tab-settings -->
                <div id="tab-style" class="tab-pane form-horizontal fade">
                  <div class="form-group">
                    <label class="col-md-2 control-label" for="emailtemplate_config_style">{{ entry_style }}</label>
                    <div class="col-md-10">
                      <div><a href="#collapse-style" class="btn btn-info collapsed" data-toggle="collapse"><i class="fa fa-chevron-right fa-fw" ></i> {{ button_settings }}</a></div>
                      <div class="collapse well mt-2" id="collapse-style">
                        <label class="form-check-image">
                          Page with shadow
                          <input class="form-check-image-input" type="radio" id="emailtemplate_config_style_page" name="emailtemplate_config_style" value="page"{{ emailtemplate_config.style == 'page' ? ' checked' : '' }} />
                          <span class="form-check-image-label img-preview-style img-style-page" for="emailtemplate_config_style_page"></span>
                        </label>
                        <label class="form-check-image">
                          Page with white body
                          <input class="form-check-image-input" type="radio" id="emailtemplate_config_style_white" name="emailtemplate_config_style" value="white"{{ emailtemplate_config.style == 'white' ? ' checked' : '' }} />
                          <span class="form-check-image-label img-preview-style img-style-white" for="emailtemplate_config_style_white"></span>
                        </label>
                        <label class="form-check-image">
                          Page with border
                          <input class="form-check-image-input" type="radio" id="emailtemplate_config_style_border" name="emailtemplate_config_style" value="border"{{ emailtemplate_config.style == 'border' ? ' checked' : '' }} />
                          <span class="form-check-image-label img-preview-style img-style-border" for="emailtemplate_config_style_border"></span>
                        </label>
                        <label class="form-check-image">
                          Clean
                          <input class="form-check-image-input" type="radio" id="emailtemplate_config_style_clean" name="emailtemplate_config_style" value="clean"{{ emailtemplate_config.style == 'clean' ? ' checked' : '' }} />
                          <span class="form-check-image-label img-preview-style img-style-clean" for="emailtemplate_config_style_clean"></span>
                        </label>
                        <label class="form-check-image">
                          Sections
                          <input class="form-check-image-input" type="radio" id="emailtemplate_config_style_sections" name="emailtemplate_config_style" value="sections"{{ emailtemplate_config.style == 'sections' ? ' checked' : '' }} />
                          <span class="form-check-image-label img-preview-style img-style-sections" for="emailtemplate_config_style_sections"></span>
                        </label>
                        <label class="form-check-image">
                          Crisp
                          <input class="form-check-image-input" type="radio" id="emailtemplate_config_style_crisp" name="emailtemplate_config_style" value="crisp"{{ emailtemplate_config.style == 'crisp' ? ' checked' : '' }} />
                          <span class="form-check-image-label img-preview-style img-style-crisp" for="emailtemplate_config_style_crisp"></span>
                        </label>
                      </div>
                      {% if error_emailtemplate_config_style is not empty %}<span class="text-danger">{{ error_emailtemplate_config_style }}</span>{% endif %}
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-2 control-label" for="emailtemplate_config_email_width">{{ entry_email_width }}</label>
                    <div class="col-md-4">
                      <input class="form-control" id="emailtemplate_config_email_width" name="emailtemplate_config_email_width" value="{{ emailtemplate_config.email_width }}" type="text"/>
                      <small class="help-block text-muted">{{ text_help_email_width }}</small>
                    </div>
                    <label class="col-md-2 control-label" for="emailtemplate_config_email_responsive">{{ entry_responsive }}</label>
                    <div class="col-md-4">
                      <div class="btn-group btn-group-toggle" data-toggle="buttons">
                        <label class="btn btn-default danger {{ emailtemplate_config.email_responsive == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                          <input type="radio" name="emailtemplate_config_email_responsive" value="0" {{ emailtemplate_config.email_responsive == 0 ? ' checked="checked" ' }}/><i class="fa fa-fw fa-times"></i>
                        </label>
                        <label class="btn btn-default success {{ emailtemplate_config.email_responsive == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                          <input type="radio" name="emailtemplate_config_email_responsive" value="1" {{ emailtemplate_config.email_responsive == 1 ? ' checked="checked" ' }}/><i class="fa fa-fw fa-check"></i>
                        </label>
                      </div>
                      {% if error_emailtemplate_config_email_responsive is not empty %}<span class="text-danger">{{ error_emailtemplate_config_email_responsive }}</span>{% endif %}
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-2 control-label" for="emailtemplate_config_page_align">{{ entry_page_align }}</label>
                    <div class="col-md-4">
                      <select class="form-control" name="emailtemplate_config_page_align" id="emailtemplate_config_page_align">
                        <option value="center" {{ emailtemplate_config.page_align == 'center' ? ' selected="selected" ' }}>{{ text_center }}</option>
                        <option value="left" {{ emailtemplate_config.page_align == 'left' ? ' selected="selected" ' }}>{{ text_left }}</option>
                        <option value="right" {{ emailtemplate_config.page_align == 'right' ? ' selected="selected" ' }}>{{ text_right }}</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-2 control-label" for="emailtemplate_config_text_align">{{ entry_text_align }}</label>
                    <div class="col-md-4">
                      <select class="form-control" name="emailtemplate_config_text_align" id="emailtemplate_config_text_align">
                        <option value="left" {{ emailtemplate_config.text_align == 'left' ? ' selected="selected" ' }}>{{ text_left }}</option>
                        <option value="right" {{ emailtemplate_config.text_align == 'right' ? ' selected="selected" ' }}>{{ text_right }}</option>
                        <option value="center" {{ emailtemplate_config.text_align == 'center' ? ' selected="selected" ' }}>{{ text_center }}</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-2 control-label" for="emailtemplate_config_body_font_size">{{ entry_font_size }}</label>
                    <div class="col-md-4">
                      <input class="form-control" type="number" id="emailtemplate_config_body_font_size" name="emailtemplate_config_body_font_size" value="{{ emailtemplate_config.body_font_size }}"/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-2 control-label" for="emailtemplate_config_body_font_family">{{ entry_font_family }}</label>
                    <div class="col-md-4">
                      <div class="form-check mb-1">
                        <input class="form-check-input" id="emailtemplate_config_body_font_family_arial" type="radio" name="emailtemplate_config_body_font_family" value='Arial, Helvetica, sans-serif' {{  emailtemplate_config.body_font_family == 'Arial, Helvetica, sans-serif' ? ' checked="checked" ' }}/>
                        <label class="form-check-label" for="emailtemplate_config_body_font_family_arial" style="font-family:Arial, 'Helvetica Neue', Helvetica, sans-serif">Arial/Helvetica</label>
                      </div>
                      <div class="form-check mb-1">
                        <input class="form-check-input" id="emailtemplate_config_body_font_family_courier" type="radio" name="emailtemplate_config_body_font_family" value="'Courier New', Courier, monospace" {{ emailtemplate_config.body_font_family == "'Courier New', Courier, monospace" ? ' checked="checked" ' }}/>
                        <label class="form-check-label" for="emailtemplate_config_body_font_family_courier" style="font-family:'Courier New', Courier, monospace">Courier</label>
                      </div>
                      <div class="form-check mb-1">
                        <input class="form-check-input" id="emailtemplate_config_body_font_family_tahoma" type="radio" name="emailtemplate_config_body_font_family" value="Tahoma, Geneva, sans-serif" {{ emailtemplate_config.body_font_family == "Tahoma, Geneva, sans-serif" ? ' checked="checked" ' }}/>
                        <label class="form-check-label" for="emailtemplate_config_body_font_family_tahoma" style="font-family:Tahoma, Geneva, sans-serif">Tahoma</label>
                      </div>
                      <div class="form-check mb-1">
                        <input class="form-check-input" id="emailtemplate_config_body_font_family_times" type="radio" name="emailtemplate_config_body_font_family" value="'Times New Roman', Times, serif" {{ emailtemplate_config.body_font_family == "'Times New Roman', Times, serif" ? ' checked="checked" ' }}/>
                        <label class="form-check-label" for="emailtemplate_config_body_font_family_times" style="font-family:'Times New Roman', Times, serif">Times New Roman</label>
                      </div>
                      <div class="form-check mb-1">
                        <input class="form-check-input" id="emailtemplate_config_body_font_family_trebuchetms" type="radio" name="emailtemplate_config_body_font_family" value="'Trebuchet MS', Helvetica, sans-serif" {{ emailtemplate_config.body_font_family == "'Trebuchet MS', Helvetica, sans-serif" ? ' checked="checked" ' }}/>
                        <label class="form-check-label" for="emailtemplate_config_body_font_family_trebuchetms" style="font-family:'Trebuchet MS', Helvetica, sans-serif">Trebuchet MS</label>
