              <input name="original_templates[affiliate.register_admin]" value="1" checked="checked" type="checkbox"/>
              {{ template_affiliate_register_admin }} </label>
            <label class="list-group-item">
              <input name="original_templates[product.review]" value="1" checked="checked" type="checkbox"/>
              {{ template_order_admin }} </label>
          </div>
          <div class="list-group">
            <div class="list-group-item">
              <h4 style="margin-bottom:0">{{ text_extra }}</h4>
            </div>
            <label class="list-group-item">
              <input name="original_templates[journal.form]" value="1" checked="checked" type="checkbox"/>
              {{ template_journal_form }} </label>
            <label class="list-group-item">
              <input name="original_templates[journal.newsletter]" value="1" checked="checked" type="checkbox"/>
              {{ template_journal_newsletter }} </label>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
