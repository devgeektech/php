<style type="text/css">
  body {
    background-color: transparent
  }
  #header, #footer {
    display: none !important
  }
</style>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
  </button>
  <h5 class="modal-title">{{ heading_template_event }}</h5>
</div>
<form action="{{ action }}" method="post" enctype="multipart/form-data" class="container-fluid form-horizontal">
  <div class="modal-body">
    <div class="form-group required">
      <label class="control-label" for="input_code">{{ entry_event_code }}</label>
      <input type="text" required="required" id="input_code" class="form-control" name="code" value="" placeholder="customer_newsletter" />
      {% if error_code %}<span class="text-danger">{{ error_code }}</span>{% endif %}
    </div>
    <div class="form-group required">
      <label class="control-label" for="input_trigger">{{ entry_event_trigger }}</label>
      <input type="text" required="required" id="input_trigger" class="form-control" name="trigger" value="" placeholder="catalog/model/account/customer/editNewsletter/after" />
      {% if error_trigger %}<span class="text-danger">{{ error_trigger }}</span>{% endif %}
    </div>
    <div class="form-group required">
      <label class="control-label" for="input_action">{{ entry_event_action }}</label>
      <input type="text" required="required" id="input_action" class="form-control" name="action" value="extension/module/emailtemplate/event/afterEvent" />
      {% if error_action %}<span class="text-danger">{{ error_action }}</span>{% endif %}
    </div>
  </div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-success" data-action="save"><i class="fa fa-save"></i> {{ button_save }} </button>
  </div>
</form>