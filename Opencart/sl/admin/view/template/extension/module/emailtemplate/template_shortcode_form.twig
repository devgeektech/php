<style type="text/css">
  body {
    background-color: transparent
  }
  #header, #footer {
    display: none !important
  }
</style>
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span>
  </button>
  <h5 class="modal-title">{{ heading_template_shortcode }}</h5>
</div>
<form action="{{ action }}" method="post" enctype="multipart/form-data" class="container-fluid">
  <div class="modal-body form-horizontal">
    <div class="form-group required">
      <label class="control-label col-sm-3" for="emailtemplate_shortcode_code">{{ entry_code }}</label>
      <div class="col-sm-9">
        <input type="text" required="required" id="emailtemplate_shortcode_code" class="form-control" name="emailtemplate_shortcode_code" value="{{ shortcode['code'] }}"/>
      </div>
    </div>
    <div class="form-group required">
      <label class="control-label col-sm-3" for="emailtemplate_shortcode_code">{{ entry_type }}</label>
      <div class="col-sm-9">
        <select class="form-control" name="emailtemplate_shortcode_type" id="emailtemplate_shortcode_type" required>
          <option value="auto"{{ shortcode.type=='auto' ? ' selected="selected" ' }}>{{ text_auto }}</option>
          <option value="language"{{ shortcode.type=='language' ? ' selected="selected" ' }}>{{ text_language }}</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-3" for="emailtemplate_shortcode_example">{{ entry_example }}</label>
      <div class="col-sm-9">
        <input type="text" id="emailtemplate_shortcode_example" class="form-control" name="emailtemplate_shortcode_example" value="{{ shortcode['example'] }}"/>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-success" data-action="save"><i class="fa fa-save"></i> {{ button_save }} </button>
  </div>
</form>
