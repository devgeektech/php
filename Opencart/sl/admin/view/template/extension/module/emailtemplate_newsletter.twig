{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li class="breadcrumb-item{{ loop.index == breadcrumbs|length ? ' active' }}"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if error_event %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_event }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if error_template %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_template }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if error_modification %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_modification }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
      <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading"><i class="fa fa-pencil"></i> {{ text_edit }}</div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <div class="form-group row">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-4">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-default danger {{ module_emailtemplate_newsletter_status == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_disabled }}">
                  <input type="radio" name="module_emailtemplate_newsletter_status" value="0"{{ module_emailtemplate_newsletter_status == 0 ? ' checked="checked"' }} /><i class="fa fa-fw fa-times"></i>
                </label>
                <label class="btn btn-default success {{ module_emailtemplate_newsletter_status == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_enabled }}">
                  <input type="radio" name="module_emailtemplate_newsletter_status" value="1"{{ module_emailtemplate_newsletter_status == 1 ? ' checked="checked"' }} /><i class="fa fa-fw fa-check"></i>
                </label>
              </div>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 control-label">{{ entry_preference }}</label>
            <div class="col-sm-4">
              <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-default danger {{ module_emailtemplate_newsletter_preference == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_disabled }}">
                  <input type="radio" name="module_emailtemplate_newsletter_preference" onchange="jQuery('.collapse-preference').collapse('hide');" value="0"{{ module_emailtemplate_newsletter_preference == 0 ? ' checked="checked"' }} /><i class="fa fa-fw fa-times"></i>
                </label>
                <label class="btn btn-default success {{ module_emailtemplate_newsletter_preference == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_enabled }}">
                  <input type="radio" name="module_emailtemplate_newsletter_preference" onchange="jQuery('.collapse-preference').collapse('show');" value="1"{{ module_emailtemplate_newsletter_preference == 1 ? ' checked="checked"' }} /><i class="fa fa-fw fa-check"></i>
                </label>
              </div>
              <div class="help-block">{{ text_preference }}</div>
            </div>
            <label class="col-sm-2 control-label collapse collapse-preference{{ module_emailtemplate_newsletter_preference == 1 ? ' in' }}">{{ entry_options }}</label>
            <div class="col-sm-4 collapse collapse-preference{{ module_emailtemplate_newsletter_preference == 1 ? ' in' }}">
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="module_emailtemplate_newsletter_notification" value="1"{{ module_emailtemplate_newsletter_notification == 1 ? ' checked="checked"' }} /> {{ entry_notification }}
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="module_emailtemplate_newsletter_newsletter" value="1"{{ module_emailtemplate_newsletter_newsletter == 1 ? ' checked="checked"' }} /> {{ entry_newsletter }}
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="module_emailtemplate_newsletter_showcase" value="1"{{ module_emailtemplate_newsletter_showcase == 1 ? ' checked="checked"' }} /> {{ entry_showcase }}
                </label>
              </div>
            </div>
          </div>
          <fieldset class="form-section">
            <h3 class="heading">{{ heading_alert }}</h3>
            <div class="form-group row form-group-radio">
              <label class="col-sm-2 control-label" for="module_emailtemplate_newsletter_subscribe">{{ entry_subscribe }}</label>
              <div class="col-sm-4">
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                  <label class="btn btn-default danger {{ module_emailtemplate_newsletter_subscribe == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                    <input type="radio" name="module_emailtemplate_newsletter_subscribe" value="0"{{ module_emailtemplate_newsletter_subscribe == 0 ? ' checked="checked"' }} /><i class="fa fa-fw fa-times"></i>
                  </label>
                  <label class="btn btn-default success {{ module_emailtemplate_newsletter_subscribe == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                    <input type="radio" name="module_emailtemplate_newsletter_subscribe" value="1"{{ module_emailtemplate_newsletter_subscribe == 1 ? ' checked="checked"' }} /><i class="fa fa-fw fa-check"></i>
                  </label>
                </div>
                {% if edit_emailtemplate_newsletter_subscribe %}<a href="{{ edit_emailtemplate_newsletter_subscribe }}" data-toggle="tooltip" title="customer.subscribe" class="btn btn-info"><i class="fa fa-fw fa-pencil"></i></a>{% endif %}
                <div class="help-block">{{ text_subscribe }}</div>
              </div>
              <label class="col-sm-2 control-label" for="module_emailtemplate_newsletter_subscribe_admin">{{ entry_subscribe_admin }}</label>
              <div class="col-sm-4">
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                  <label class="btn btn-default danger {{ module_emailtemplate_newsletter_subscribe_admin == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                    <input type="radio" name="module_emailtemplate_newsletter_subscribe_admin" value="0"{{ module_emailtemplate_newsletter_subscribe_admin == 0 ? ' checked="checked"' }} /><i class="fa fa-fw fa-times"></i>
                  </label>
                  <label class="btn btn-default success {{ module_emailtemplate_newsletter_subscribe_admin == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                    <input type="radio" name="module_emailtemplate_newsletter_subscribe_admin" value="1"{{ module_emailtemplate_newsletter_subscribe_admin == 1 ? ' checked="checked"' }} /><i class="fa fa-fw fa-check"></i>
                  </label>
                </div>
                {% if edit_emailtemplate_newsletter_subscribe_admin %}<a href="{{ edit_emailtemplate_newsletter_subscribe_admin }}" data-toggle="tooltip" title="customer.subscribe_admin" class="btn btn-info"><i class="fa fa-fw fa-pencil"></i></a>{% endif %}
                <div class="help-block">{{ text_subscribe_admin }}</div>
              </div>
            </div>
            <div class="form-group row form-group-radio">
              <label class="col-sm-2 control-label" for="module_emailtemplate_newsletter_unsubscribe">{{ entry_unsubscribe }}</label>
              <div class="col-sm-4">
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                  <label class="btn btn-default danger {{ module_emailtemplate_newsletter_unsubscribe == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                    <input type="radio" name="module_emailtemplate_newsletter_unsubscribe" value="0"{{ module_emailtemplate_newsletter_unsubscribe == 0 ? ' checked="checked"' }} /><i class="fa fa-fw fa-times"></i>
                  </label>
                  <label class="btn btn-default success {{ module_emailtemplate_newsletter_unsubscribe == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                    <input type="radio" name="module_emailtemplate_newsletter_unsubscribe" value="1"{{ module_emailtemplate_newsletter_unsubscribe == 1 ? ' checked="checked"' }} /><i class="fa fa-fw fa-check"></i>
                  </label>
                </div>
                {% if edit_emailtemplate_newsletter_unsubscribe %}<a href="{{ edit_emailtemplate_newsletter_unsubscribe }}" data-toggle="tooltip" title="customer.unsubscribe" class="btn btn-info"><i class="fa fa-fw fa-pencil"></i></a>{% endif %}
                <div class="help-block">{{ text_unsubscribe }}</div>
              </div>
              <label class="col-sm-2 control-label" for="module_emailtemplate_newsletter_unsubscribe_admin">{{ entry_unsubscribe_admin }}</label>
              <div class="col-sm-4">
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                  <label class="btn btn-default danger {{ module_emailtemplate_newsletter_unsubscribe_admin == 0 ? ' active' }}" data-toggle="tooltip" title="{{ text_no }}">
                    <input type="radio" name="module_emailtemplate_newsletter_unsubscribe_admin" value="0"{{ module_emailtemplate_newsletter_unsubscribe_admin == 0 ? ' checked="checked"' }} /><i class="fa fa-fw fa-times"></i>
                  </label>
                  <label class="btn btn-default success {{ module_emailtemplate_newsletter_unsubscribe_admin == 1 ? ' active' }}" data-toggle="tooltip" title="{{ text_yes }}">
                    <input type="radio" name="module_emailtemplate_newsletter_unsubscribe_admin" value="1"{{ module_emailtemplate_newsletter_unsubscribe_admin == 1 ? ' checked="checked"' }} /><i class="fa fa-fw fa-check"></i>
                  </label>
                </div>
                {% if edit_emailtemplate_newsletter_unsubscribe_admin %}<a href="{{ edit_emailtemplate_newsletter_unsubscribe_admin }}" data-toggle="tooltip" title="uncustomer.subscribe_admin" class="btn btn-info"><i class="fa fa-fw fa-pencil"></i></a>{% endif %}
                <div class="help-block">{{ text_unsubscribe_admin }}</div>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
<style type="text/css">
  .btn-group-toggle > .btn.active.success > i { color: #459046; }
  .btn-group-toggle > .btn.active.danger > i { color: #a94442; }
</style>
{{ footer }}