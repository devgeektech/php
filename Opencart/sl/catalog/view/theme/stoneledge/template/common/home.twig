{{ header }}
<style>
	.steps {
		padding: 20px 0 50px;
	}
	.steps > div {
		float: left;
		font-size: 15px;
		line-height: 21px;
		text-align: left;
		padding-left: 30px;
		padding-right: 55px;
		position: relative;
		margin-left: 2%;
	}
	.steps > div h2 {
		color: #821618;
		font-family: 'Merriweather', serif;
		font-size: 24px;
	}
	.steps > div:before {
		color: #597725;
		font-family: 'Montserrat', sans-serif;
		font-size: 27px;
		position: absolute;
		left: 0;
		top: 1px;
	}
	.steps > div:nth-child(1) {
		margin: auto;
		width: 33%;
	}
	.steps > div:nth-child(1):before {
		content: "1";
	}
	.steps > div:nth-child(1):after,
	.steps > div:nth-child(2):after {
		content: "";
		background: url('image/catalog/steps-plus.png') no-repeat center center;
		display: inline-block;
		width: 42px;
		height: 44px;
		position: absolute;
		top: 30px;
		right: 0;
	}
	.steps > div:nth-child(2) {
		padding-left: 50px;
		width: 33%;
	}
	.steps > div:nth-child(2):before {
		content: "2";
	}
	.steps > div:nth-child(3) {
		padding-left: 50px;
		padding-right: 0;
		width: 30%;
	}
	.steps > div:nth-child(3):before {
		content: "3";
	}
	#sortable{padding:0px !important;}
	#sortable .block-child.block-container.show_desktop.show_mobile.show_tablet{margin-bottom:0px !important;}
	#jqrpopup_wrapper{ display: none;  } /*hide popup on home page*/
</style>
