<div class="bm-posts">
    <div class="bm-grid bm-grid">
        <div class="row">
            {% for post in posts %}
                    {% if post.row %}
                        </div><div class="row">
                    {% endif %}
                    <li class="col-sm-3" {% if post.animate %}animate="{{post.animate}}"{% endif %}>
                            {% include template('extension/d_blog_module/post_thumb') with post %}
                    </li>
            {% endfor %}
        </div>
    </div>
    <div class="bm-pagination">
        <div class="row">
            <div class="col-sm-6 text-left">{{pagination}}</div>
            <div class="col-sm-6 text-right">{{results}}</div>
        </div>
    </div>
</div>