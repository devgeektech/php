{{ header }}
<div class="page-content">
    <div class="page-content-header">
        <div class="intro-bg">
            <div class="container">
                <!-- Marketing Icons Section -->
                <div class="row intro-heading">
                    <div class="col-lg-12">
                        <h1 class="pageTitle">{{ heading_title }}</h1>
                        {% if is_marketplace_product %}
                            <p>Please login to place an order from the online Marketplace.</p>
                        {% endif %}
                        <p class="member-cta">
                            <a href="{{ register_link }}#locations" class="greenborder-cta">New Member Registrations ›</a> 
                            <a href="{{ login_link }}" class="greenborder-cta">Member Log In ›</a>
                        </p>
                        {% if is_marketplace_product %}
                            <p><strong>Please note:</strong> During the CSA season, the order deadline for delivery of your Marketplace Order is 1 pm the day before your CSA delivery. Orders received after the deadline will be delivered the following CSA delivery. You will receive an e-mail confirmation and reminder of your Marketplace order. Please login to your Member Account to place your Marketplace order.</p>
                        {% endif %}
                        
                        <ul class="breadcrumb">
                            {% for breadcrumb in breadcrumbs %}
                                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
        <div class="row">
            <div id="product-product">
                <div class="page-content-body">
                    <div class="container page-content-wrapper">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="productDesc">
                                    {{description}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{ content_bottom }}</div>
        {{ column_right }}</div>
    </div>
    
</div>
<script>
    $(document).ready(function() {
        {% if is_marketplace_product %}
            $('.parallax-window').parallax({imageSrc: '{{ store_url }}image/catalog/marketplace-items-2021028399.jpg'});
        {% else %}
            $('.parallax-window').parallax({imageSrc: '{{ store_url }}image/catalog/seedling-2021195556295.jpg'});
        {% endif %}
    });
</script>
{{ footer }}